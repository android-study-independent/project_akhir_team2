<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.beranda.BerandaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_4">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_282sdp"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:background="@drawable/bg_white">

                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:src="@drawable/profile" />

                    <TextView
                        android:id="@+id/tvCuaca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="@string/tvTani" />

                    <TextView
                        android:id="@+id/tvTanya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_70sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/tvTanya"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_345sdp"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:src="@drawable/notification" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_265sdp"
                        android:layout_height="@dimen/_165sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_90sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:backgroundTint="@color/green_4"
                        android:paddingTop="@dimen/_30sdp"
                        app:cardCornerRadius="@dimen/_15sdp">


                        <LinearLayout
                            android:layout_width="315dp"
                            android:layout_height="183dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/bg_white"
                            android:orientation="horizontal"
                            tools:layout_marginStart="15dp">


                            <LinearLayout
                                android:layout_width="@dimen/_190sdp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/minggu_05_n"
                                    android:layout_width="@dimen/_124sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:gravity="top"
                                    android:lineSpacingExtra="-1sp"
                                    android:text="@string/minggu_05_n"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/imageWeather"
                                    android:layout_width="@dimen/_159sdp"
                                    android:layout_height="@dimen/_223sdp"
                                    android:layout_weight="1"
                                    android:src="@drawable/weather" />

                                <TextView
                                    android:id="@+id/berawan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_55sdp"
                                    android:layout_marginBottom="@dimen/_20sdp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/berawan"
                                    android:textSize="@dimen/_14sdp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="@dimen/_173sdp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/alamat"
                                    android:layout_width="@dimen/_91sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginTop="@dimen/_17sdp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/alamat"
                                    android:textSize="@dimen/_20sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/suhu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/suhu"
                                    android:textSize="@dimen/_30sdp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/keterangan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="@string/keterangan"
                                    android:textSize="@dimen/_12sdp"
                                    tools:ignore="TextSizeCheck" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_260sdp"
                        android:background="@drawable/bg_white"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/artikel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_30sdp"
                            android:text="@string/artikel" />

                        <TextView
                            android:id="@+id/lihat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_120sdp"
                            android:text="@string/lihat"
                            android:textColor="@color/green_nav" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/arrow_right" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_300sdp"
                app:cardCornerRadius="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gbr1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:src="@drawable/gbrsatu" />

                    <TextView
                        android:id="@+id/des1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/deskripsi_1"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />

                </LinearLayout>

                <TextView
                    android:id="@+id/des2"
                    android:layout_width="@dimen/_155sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_95sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/deskripsi_2"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="TextSizeCheck" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv2"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                app:cardCornerRadius="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gbr2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:src="@drawable/gbrdua" />

                    <TextView
                        android:id="@+id/des3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/deskripsi_3"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />

                </LinearLayout>

                <TextView
                    android:id="@+id/des4"
                    android:layout_width="@dimen/_159sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_95sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/deskripsi_4"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="TextSizeCheck" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>
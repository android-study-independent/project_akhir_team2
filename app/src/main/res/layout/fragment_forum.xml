<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.forum.ForumFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green_4">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="187dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv1"
                    android:layout_width="match_parent"
                    android:layout_height="227dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/bg_white">

                    <ImageView
                        android:id="@+id/ivProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/profile" />

                    <TextView
                        android:id="@+id/tvCuaca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="50dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="@string/tvTani" />

                    <TextView
                        android:id="@+id/tvTanya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:layout_marginTop="70dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/tvTanya"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="355dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="30dp"
                        android:src="@drawable/notification" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/start_end_margin"
                        android:layout_marginTop="110dp"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilEmail"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="313dp"
                            android:layout_height="wrap_content"
                            app:boxCornerRadiusBottomEnd="@dimen/start_end_margin"
                            app:boxCornerRadiusBottomStart="@dimen/start_end_margin"
                            app:boxCornerRadiusTopEnd="@dimen/start_end_margin"
                            app:boxCornerRadiusTopStart="@dimen/start_end_margin">

                            <EditText
                                android:id="@+id/etContent"
                                android:layout_width="301dp"
                                android:layout_height="41dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:hint="@string/txContent"
                                android:inputType="textLongMessage"
                                android:textSize="@dimen/et_text_size"
                                tools:ignore="TouchTargetSizeCheck" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="25dp"
                            android:src="@drawable/gallery" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="352dp"
                android:layout_height="175dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="220dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gbr1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPengguna"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/pengguna"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvUpdatePostingan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/update_postingan" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDeskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="90dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/deskripsi" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/grey"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="302dp"
                        android:layout_height="36dp"
                        android:background="@color/grey_1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="90dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/message" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/komentari" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="353dp"
                android:layout_height="274dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="415dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gbr2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="20dp"
                        android:src="@drawable/profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPengguna2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/pengguna"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvUpdatePostingan2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/update_postingan" />

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/imgcabe" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="220dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/grey"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="302dp"
                        android:layout_height="36dp"
                        android:background="@color/grey_1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="90dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/message" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/komentari" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>